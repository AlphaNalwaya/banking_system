%table.table.table-bordered
  %thead
    %tr 
      %th Date of Transaction
      %th Transaction Type
      %th Amount
    %tbody
      - @account.account_transactions.each do |t|
      %tr
        %td #{t.created_at}  
        %td #{t.transaction_type}
        %td #{number_to_currency(t.amount, unit: "p")}
      %tr
        %th
        %th Balance
        %th #{number_to_currency(@account.balance, unit: "p")}  